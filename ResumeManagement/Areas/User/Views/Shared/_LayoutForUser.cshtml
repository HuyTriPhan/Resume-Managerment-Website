<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Resume Management</title>
    <link rel="icon" type="image/jpg" href="~/Images/logo.jpg">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/CssForLogin.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-1 bg-1">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img src="~/Content/Images/logo.jpg" class="logo-img" alt="Application logo">
                Resume Management
            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Find a Jobs", "Find a Jobs", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Page", "Page", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    @if (Session["user"] != null)
                    {
                        <li class="nav-item ml-auto">@Html.ActionLink((string)Session["user"], "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Logout", "DangXuat", "DangNhap", new { area = "HomeAdmin" }, new { @class = "nav-link" })</li>
                    }
                    else
                    {
                        <li class="nav-item ml-auto">@Html.ActionLink("Login", "DangNhap", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Register", "Register", "Account", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                    <div id="userPopup" class="user-popup">
                        <div class="user-popup-content">
                            <p><strong>@Session["UserName"]</strong></p>
                            <p>@Html.ActionLink("Đăng xuất", "DangXuat", "Home", new { area = "" }, new { @class = "logout-link" })</p>
                        </div>
                    </div>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
