@model IEnumerable<ResumeManagement.Models.NhanVien>

@{
    ViewBag.Title = "IndexQLNV";
}

<h2>IndexQLNV</h2>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<p>
    <a href="@Url.Action("CreateQLNV")" class="btn btn-outline-primary">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ten)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrangThai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaQuanTriVien)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ten)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrangThai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaQuanTriVien)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditQLNV", new { id = item.MaNhanVien }, new { @class = "btn btn-outline-primary" }) 
            @Html.ActionLink("Details", "Details", new { id = item.MaNhanVien }, new { @class = "btn btn-outline-secondary" }) 
            @Html.ActionLink("Delete", "DeleteQLNV", new { id = item.MaNhanVien }, new { @class = "btn btn-outline-danger" })
        </td>
    </tr>
}

</table>
